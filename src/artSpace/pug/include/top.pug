mixin top(isBai)
    -var className = isBai? 'isBai' : '';
    div(class='top '+className)
        div(class='top_left hover_animate' id='top_left')
        div(class='top_center') AURA SPACE
        div(class='top_right hover_animate' id='top_right')
        div(class='top_pc_menu hover_animate' id='top_pc_menu')
        div(class='top_pc_close hover_animate' id='top_pc_close')
    div(class='_top')